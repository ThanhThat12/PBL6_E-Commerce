          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "attributeValue",
                  "value": "{{second_primary_value}}",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/products/{{product_id}}/images/variant",
              "host": ["{{base_url}}"],
              "path": ["api", "products", "{{product_id}}", "images", "variant"]
