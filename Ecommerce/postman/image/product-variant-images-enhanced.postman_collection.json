          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/products/{{product_id}}/images/variant?attributeValue={{second_primary_value}}",
              "host": ["{{base_url}}"],
              "path": ["api", "products", "{{product_id}}", "images", "variant"],
              "query": [
                {
                  "key": "attributeValue",
                  "value": "{{second_primary_value}}"
                }
              ]
            }
          }
        },
