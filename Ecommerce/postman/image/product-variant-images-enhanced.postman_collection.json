    },
    {
      "name": "ðŸ§ª Test Scenarios",
      "item": [
        {
          "name": "Test Query Accuracy - Multiple Values",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// This test simulates the scenario you mentioned:",
                  "// When you upload 'Home' then 'Away', the old query would find 'Home, Away'",
                  "// The new query should only find exact matches",
                  "console.log('ðŸ§ª Testing query accuracy with multiple attribute values');"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Primary attribute values query is accurate', function () {",
                  "    const response = pm.response.json();",
                  "    const values = response.data;",
                  "    ",
                  "    // Each value should be a distinct string, not a comma-separated list",
                  "    values.forEach(value => {",
                  "        pm.expect(value).to.be.a('string');",
                  "        pm.expect(value).to.not.include(',', 'Values should not contain commas (indicating concatenated results)');",
                  "    });",
                  "    ",
                  "    console.log('âœ… All values are distinct:', values);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/products/{{product_id}}/images/variant/values",
              "host": ["{{base_url}}"],
              "path": ["api", "products", "{{product_id}}", "images", "variant", "values"]
            }
          }
        }
      ]
    }
