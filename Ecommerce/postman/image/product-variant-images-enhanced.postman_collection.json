          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "attributeValue",
                  "value": "InvalidValue123",
                  "type": "text",
                  "description": "This should fail with improved error message"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/products/{{product_id}}/images/variant",
