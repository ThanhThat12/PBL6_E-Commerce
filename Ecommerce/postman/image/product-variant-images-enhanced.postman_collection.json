{
  "info": {
    "name": "Product Variant Images API - Enhanced",
    "description": "Enhanced API collection for testing variant image upload with improved validation",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.1.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "product_id", 
      "value": "10",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "ðŸ” Authentication",
      "item": [
        {
          "name": "Login Seller",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.accessToken) {",
                  "        pm.collectionVariables.set('access_token', response.data.accessToken);",
                  "        console.log('âœ… Access token saved');",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"seller@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "ðŸ“‹ Primary Attribute Values",
      "item": [
        {
          "name": "Get Primary Attribute Values",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has primary attribute values', function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.data).to.be.an('array');",
                  "    console.log('ðŸ“ Available primary attribute values:', response.data);",
                  "    ",
                  "    // Save first available value for variant image upload",
                  "    if (response.data && response.data.length > 0) {",
                  "        pm.collectionVariables.set('first_primary_value', response.data[0]);",
                  "        pm.collectionVariables.set('second_primary_value', response.data[1] || response.data[0]);",
                  "    }",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/products/{{product_id}}/images/variant/values",
              "host": ["{{base_url}}"],
              "path": ["api", "products", "{{product_id}}", "images", "variant", "values"]
            }
          }
        }
      ]
    },
    {
