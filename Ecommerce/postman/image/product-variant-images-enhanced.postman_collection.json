    {
      "name": "ðŸ“Š Get Product Images",
      "item": [
        {
          "name": "Get All Product Images",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response contains image data structure', function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.data).to.have.property('mainImage');",
                  "    pm.expect(response.data).to.have.property('galleryImages');",
                  "    pm.expect(response.data).to.have.property('variantImages');",
