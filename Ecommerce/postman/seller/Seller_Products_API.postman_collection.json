	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Login as Seller",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.token) {",
									"        pm.environment.set(\"token\", jsonData.data.token);",
									"        pm.environment.set(\"username\", pm.request.body.raw ? JSON.parse(pm.request.body.raw).username : \"\");",
									"        console.log(\"✅ Login successful! Token saved.\");",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"seller1\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"login"
							]
						},
						"description": "Login với tài khoản SELLER để lấy JWT token"
					},
					"response": []
				}
			]
		},
